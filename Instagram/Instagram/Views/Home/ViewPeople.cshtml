                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@Model.User.Id"/>
                            <div class="removeUser" onclick="$(this).closest('form').submit();">
                                <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-trash2-fill" viewBox="0 0 16 16">
                                    <path d="M2.037 3.225A.703.703 0 0 1 2 3c0-1.105 2.686-2 6-2s6 .895 6 2a.702.702 0 0 1-.037.225l-1.684 10.104A2 2 0 0 1 10.305 15H5.694a2 2 0 0 1-1.973-1.671L2.037 3.225zm9.89-.69C10.966 2.214 9.578 2 8 2c-1.58 0-2.968.215-3.926.534-.477.16-.795.327-.975.466.18.14.498.307.975.466C5.032 3.786 6.42 4 8 4s2.967-.215 3.926-.534c.477-.16.795-.327.975-.466-.18-.14-.498-.307-.975-.466z" />
                                </svg>
                            </div>
                        }                        
                    </div>
                    
                    <div class="p-4"></div>
                    <div class="profileCard col-lg-12 p-5">
                        <div class="row m-0 p-0 profileInfo">
                            <div class="col-lg-3 m-0 p-0">
                                <div class="profileImage">
                                    @if (Model.ProfilePic == null)
                                    {
                                        <img src="~/images/developer.png" />
                                    }
                                    else
                                    {
                                        <img src="/@Model.ProfilePic.ImageFile" />
                                    }
                                </div>

                                <div class="p-2"></div>
                                <div class="data_1">
                                    <p class="p_name">@Model.User.Name</p>
                                    @if (Model.User.Job != null)
                                    {
                                        <p class="p_job">@Model.User.Job</p>
                                    }
                                </div>
                                <div class="contactInfo">
                                    <div>
                                    @if (Model.User.Phone != null)
                                    {
                                        <p class="p_text">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                            </svg>&nbsp;@Model.User.Phone
                                        </p>
                                    }
                                    <p class="p_text">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                                            <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                                        </svg>&nbsp;@Model.User.Email
                                    </p>
                                    </div>
                                </div>

                                <div class="p-4"></div>
                                <div class="data_2">
                                    <h1>Extras</h1>
                                    <p class="p_text">Date: @Model.User.DateTimeOfRegistration.ToString("MMMM dd, yyyy")</p>
                                    <p class="p_text">Time: @Model.User.DateTimeOfRegistration.ToString("HH:mm:ss tt")</p>
                                </div>
                            </div>
                            <div class="col-lg-1 m-0 p-4"></div>
                            <div class="col-lg-5 m-0 p-0">
                                <h1>Firm</h1>
                                @if (Model.User.Firm != null)
                                {
                                    <p class="p_text">@Model.User.Firm</p>
                                }
                                else
                                {
                                    <p class="p_text">Not Applicable</p>
                                }
                                <div class="p-2"></div>
                                <h1>Chronicle</h1>
                                @if (Model.User.Chronicle != null)
                                {
                                    <p class="p_text">@Model.User.Chronicle</p>
                                }
                                else
                                {
                                    <p class="p_text">Not Applicable</p>
                                }
                                <div class="p-2"></div>
                                <h1>Address</h1>
                                @if (Model.User.Address != null)
                                {
                                    <p class="p_text">@Model.User.Address</p>
                                }
                                else
                                {
                                    <p class="p_text">Not Applicable</p>
                                }
                            </div>
                            <div class="col-lg-1 m-0 p-4"></div>
                            <div class="col-lg-2 m-0 p-0 d-flex align-items-end justify-content-around">
                                <img src="~/images/plant.png" class="profilePlant" />
                            </div>
                        </div>
                    </div>

                        <div class="p-4"></div>
                        
                    <div class="d-flex justify-content-end">
                        
                        @if (Model.User.BANNED == false)
                        {
                            @using (Html.BeginForm("BanUser", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.User.Id" />
                                <div class="ban" onclick="$(this).closest('form').submit();">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" fill="currentColor" class="bi bi-door-closed-fill" viewBox="0 0 16 16">
                                        <path d="M12 1a1 1 0 0 1 1 1v13h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V2a1 1 0 0 1 1-1h8zm-2 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                                    </svg><p>Ban</p>
                                </div>
                            }

                        }
                        else
                        {
                            @using (Html.BeginForm("AllowUser", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.User.Id"/>
                                <div class="allow" onclick="$(this).closest('form').submit();">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" fill="currentColor" class="bi bi-door-open-fill" viewBox="0 0 16 16">
                                        <path d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15H1.5zM11 2h.5a.5.5 0 0 1 .5.5V15h-1V2zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z" />
                                    </svg><p>Allow</p>
                                </div>
                            }
                            
                        }                       
                        
                    </div>
                    <div class="p-5"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/AdminSite.js" asp-append-version="true"></script>
</body>
</html>