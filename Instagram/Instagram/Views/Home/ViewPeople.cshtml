@model Instagram.Models.UserAndProfilePic

<html>
<head>
    <title>Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width; initial-scale=1.0" />
    <link rel="icon" type="image/svg" href="~/admin_images/flower_logo2.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Instagram.styles.css" asp-append-version="true" />

    <style>
        .sideBar {
            position: absolute;
            top: 0;
            left: 0;
            width: 400px;
            height: 100%;
            transition: all 1s ease-in-out;
            background: #ffffff;
            box-shadow: rgba(0, 0, 0, 0.25) 0px 0.0625em 0.0625em, rgba(0, 0, 0, 0.25) 0px 0.125em 0.5em, rgba(255, 255, 255, 0.1) 0px 0px 0px 1px inset;
        }

        .main {
            position: absolute;
            top: 0;
            left: 400px;
            background: #00000015;
            width: 100%;
            height: 100vh;
            transition: all 1s ease-in-out;
            overflow-y: scroll;
        }

        .frameCover {
            position: relative;
            width: 100%;
            height: 100vh;
        }

        .toggleAdminSideBar {
            left: -450px;
        }

        .toggleAdminMain {
            left: 0;
        }

        .adminBody {
            overflow: hidden;
        }

        .title {
            padding: 34px 0px 10px 60px;
        }

            .title h1 {
                color: #606060a0;
                letter-spacing: 1px;
                font-size: 34px;
                font-weight: 100;
                width: 100%;
                border-bottom: 1px solid #60606060;
                padding-bottom: 6px;
            }

        .menus {
            width: 100%;
        }

            .menus ul {
                width: 100%;
                padding: 0;
            }

                .menus ul li {
                    list-style: none;
                    padding-left: 40px;
                }

                    .menus ul li a {
                        padding: 2px 0px 2px 25px;
                        color: #606060a0;
                        font-size: 18px;
                        text-decoration: none;
                        display: flex;
                        align-items: center;
                        cursor: pointer;
                        transition-property: all;
                        transition-duration: 1s;
                        transition-timing-function: ease;
                    }

                        .menus ul li a svg {
                            color: #606060a0;
                        }

                        .menus ul li a p {
                            padding-top: 15px;
                            color: #606060d0;
                            letter-spacing: 1px;
                        }

                    .anchor:hover {
                        color: #606060a0;
                        text-decoration: none;
                        background: #BF40BF40;
                        border-left: 6px solid #BF40BF;
                    }

        .activated {
            background: linear-gradient(to right, #BF40BF40, #ffffff15);
            border-left: 6px solid #BF40BF;
        }

        .menus ul li:hover {
        }

        .image {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-around;
        }

            .image img {
                width: 200px;
            }

        .anchor {
            border-left: 6px solid transparent;
        }

        .closeSidebar {
            width: 46px;
            height: 60px;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .cover {
            width: 100%;
            height: 46%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: all 0.6s ease;
        }

        .line {
            width: 100%;
            padding: 2px;
            background: #606060;
            transition: all 0.6s ease;
        }

        .line_1 {
            transform: rotate(45deg);
        }

        .line_2 {
            transform: rotate(-45deg);
        }

        .coverToggle {
            height: 2px;
        }

        .cardHome {
            background: #ffffff;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
        }

        .svgs {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .imageCard {
            background: #60606060;
        }

            .imageCard img {
                width: 100%;
                height: 490px;
            }

        .iconMessage {
            display: flex;
            align-items: center;
        }

            .iconMessage img {
                width: 200px;
            }

            .iconMessage p {
                font-size: 18px;
                letter-spacing: 1px;
                line-height: 29px;
                color: #606060d0;
            }

        .message {
            width: 100%;
            margin-top: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

            .message h1 {
                width: 90%;
                color: #606060d0;
                font-weight: 100;
                font-size: 25px;
                padding-bottom: 6px;
                border-bottom: 1px solid #60606060;
                letter-spacing: 1px;
                margin-bottom: 25px;
            }

            .message p {
                width: 90%;
                color: #606060d0;
                letter-spacing: 1px;
                font-size: 18px;
                line-height: 29px;
            }

        .groupMessage h1 {
            color: #606060d0;
            letter-spacing: 1px;
            font-size: 25px;
            font-weight: 100;
        }

        .groupMessage p {
            color: #606060d0;
            letter-spacing: 1px;
            font-size: 18px;
            line-height: 29px;
        }

        .groupImage {
            display: flex;
            align-items: center;
            justify-content: space-around;
        }

            .groupImage img {
                width: 400px;
            }

        .userCard {
            cursor: pointer;
            background: radial-gradient(circle at 0% 0%, #FFFFFFd0, #E5E4E260);
            box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
        }

            .userCard:hover {
                box-shadow: rgba(0, 0, 0, 0.25) 0px 0.0625em 0.0625em, rgba(0, 0, 0, 0.25) 0px 0.125em 0.5em, rgba(255, 255, 255, 0.1) 0px 0px 0px 1px inset;
            }




        .datetimeDetails {
            background: #E5E4E2;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 13px 0px 0px 13px;
            border-top: 1px solid #C0C0C0;
            border-bottom: 1px solid #ffffff;
        }

            .datetimeDetails p {
                color: #606060d0;
                font-size: 15px;
                letter-spacing: 1px;
            }

        .imageProfile {
            display: flex;
            align-items: center;
            justify-content: space-around;
        }

        .user {
            font-size: 20px;
            letter-spacing: 1px;
            color: #606060d0;
            border-bottom: 1px solid #60606060;
            padding-bottom: 4px;
            margin-bottom: 25px;
            width: 100%;
            text-transform: uppercase;
        }


        .profileCard {
            border-left: 6px solid #708090;
            background: radial-gradient(circle at 0% 0%, #FFFFFF, #C0C0C0);
            height: auto;
            margin: auto auto;
            box-shadow: rgba(0, 0, 0, 0.25) 0px 0.0625em 0.0625em, rgba(0, 0, 0, 0.25) 0px 0.125em 0.5em, rgba(255, 255, 255, 0.1) 0px 0px 0px 1px inset;
        }

        .profileInfo {
            color: #606060d0;
        }


            .profileInfo h1 {
                font-size: 25px;
                letter-spacing: 1px;
                font-weight: 400;
                padding-bottom: 6px;
                border-bottom: 1px solid #60606040;
                margin-bottom: 15px;
            }

        .profileImage img {
            width: 150px;
            height: 150px;
            border-radius: 100px;
        }

        .profileImage {
            text-align: center;
        }

        .data_1 {
            text-align: center;
        }

        .contactInfo {
            display: flex;
            justify-content: space-around;
        }

        .profileInfo p {
            letter-spacing: 1px;
            line-height: 29px;
            font-weight: 400;
        }

        .p_name {
            font-size: 25px;
        }

        .p_job {
            font-size: 15px;
            margin-bottom: 25px;
            text-transform: uppercase;
            color: #606060a0;
        }

        .p_text {
            font-size: 18px;
            line-height: 29px;
        }

        .h1_profile {
            font-size: 29px;
            margin-bottom: 25px;
        }

        .data_2 {
            width: 100%;
        }

        .profilePlant {
            width: 250px;
        }

        .info {
            color: #606060d0;
            font-size: 17px;
            letter-spacing: 1px;
        }

        .imageProfile img {
            width: 150px;
            height: 150px;
        }

        .userCardData {
            flex: 1;
            padding-right: 40px;
            padding-left: 25px;
            padding-top: 25px;
        }

        .datetime {
            color: #606060d0;
            letter-spacing: 1px;
            font-size: 15px;
            padding-left: 15px;
            padding-right: 15px;
        }


        .edit {
            width: 150px;
            height: 150px;
            background: #7393B3;
            box-shadow: rgba(0, 0, 0, 0.25) 0px 0.0625em 0.0625em, rgba(0, 0, 0, 0.25) 0px 0.125em 0.5em, rgba(255, 255, 255, 0.1) 0px 0px 0px 1px inset;
            display: flex;
            align-items: center;
            justify-content: space-around;
            color: #ffffff;
            flex-direction: column;
            padding: 25px 0px 0px 0px;
            cursor: pointer;
            transition: all 0.6s ease;
            text-decoration: none;
        }

            .edit:hover {
                text-decoration: none;
                color: #ffffff;
                box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 4px, rgba(0, 0, 0, 0.3) 0px 7px 13px -3px, rgba(0, 0, 0, 0.2) 0px -3px 0px inset;
            }

            .edit p {
                font-size: 18px;
                letter-spacing: 1px;
                text-shadow: 1px 1px 1px #00000060;
            }

        .ban {
            width: 150px;
            padding: 6px 25px 6px 25px;
            cursor: pointer;
            background: #C21E56;
            color: #ffffff;
            font-size: 19px;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
            justify-content: space-around;
            text-shadow: 1px 1px 1px #000000a0;
            box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
        }

        .ban:hover {
                box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
        }

        .ban p {
            padding-top: 15px;
        }

        .allow {
            width: 150px;
            padding: 6px 25px 6px 25px;
            cursor: pointer;
            background: #6082B6;
            color: #ffffff;
            font-size: 19px;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
            justify-content: space-around;
            text-shadow: 1px 1px 1px #000000a0;
            box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
        }

        .allow:hover {
                box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
        }

        .allow p {
            padding-top: 15px;
        }

        .removeUser {
            cursor: pointer;
            color: #C0C0C0;
            filter: drop-shadow(1px 1px 1px #C0C0C0);
        }

        .removeUser:hover {
                filter: drop-shadow(1px 1px 1px #606060a0);
        }
    </style>
</head>
