@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram - @ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/images/icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Instagram.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="p-lg-3"></div>
    @if (ViewData["message"] != null)
    {
        <div class="alert alert-dismissible fade show col-lg-10 m-auto" style="background: #60006025; color: #60006060;">
            <div class="d-flex align-items-center message">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cloud-drizzle-fill" viewBox="0 0 16 16">
                    <path d="M4.158 12.025a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm-3.5 1.5a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 1 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm.747-8.498a5.001 5.001 0 0 0-9.499-1.004A3.5 3.5 0 1 0 3.5 11H13a3 3 0 0 0 .405-5.973z" />
                </svg>&nbsp;
                <div>
                    @ViewData["message"]
                </div>
            </div>

            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="p-lg-4"></div>
    <div class="col-lg-10 p-5 h_container m-auto">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/lotus.png" width="150px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 col-lg-9">
                        <li class="nav-item col-lg-2 p-2">
                            <a class="menu" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item col-lg-2 p-2">
                            <a class="menu" asp-controller="Home" asp-action="Team">Team</a>
                        </li>
                        <li class="nav-item col-lg-2 p-2">
                            <a class="menu menu-active" asp-controller="Home" asp-action="SignUp">Sign Up</a>
                        </li>
                        <li class="nav-item col-lg-3 p-2">
                            <a class="menu" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
        <div class="row m-0 p-0 h_row">
            <div class="col-lg-6 m-0 p-0">
                <div class="p-2"></div>
                @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-cover">
                        <label class="label-title">Name</label>
                        <div class="input-cover">
                            <input name="name" type="text" class="input" placeholder="Please enter your name" autocomplete="off" />
                            <label class="label-cover">
                                <img src="~/images/butterfly.png" />
                            </label>
                        </div>
                    </div>
                    <div class="p-2"></div>
                    <div class="form-cover">
                        <label class="label-title">Username</label>
                        <div class="input-cover">
                            <input name="username" type="text" class="input" placeholder="Please enter your username" autocomplete="off" />
                            <label class="label-cover">
                                <img src="~/images/butterfly.png" />
                            </label>
                        </div>
                    </div>
                    <div class="p-2"></div>
                    <div class="form-cover">
                        <label class="label-title">Email</label>
                        <div class="input-cover">
                            <input name="email" type="email" class="input" placeholder="Please enter your email" autocomplete="off" />
                            <label class="label-cover">
                                <img src="~/images/butterfly.png" />
                            </label>
                        </div>
                    </div>
                    <div class="p-2"></div>
                    <div class="form-cover">
                        <label class="label-title">Password</label>
                        <div class="input-cover">
                            <input name="password" type="password" class="input" placeholder="Please enter your password" autocomplete="off" />
                            <label class="label-cover">
                                <img src="~/images/butterfly.png" />
                            </label>
                        </div>
                    </div>
                    <div class="p-4"></div>
                    <div class="form-cover">
                        <button class="signup d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                                <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                            </svg>&nbsp;Sign Up
                        </button>
                    </div>
                }
            </div>
            <div class="col-lg-6 m-0 p-0 h_insta_block d-flex align-items-center justify-content-around">
                <img src="~/images/tree.svg" />
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
