@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram - @ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/images/icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Instagram.styles.css" asp-append-version="true" />
</head>
<body>


    <div class="p-lg-3"></div>
    @if (ViewData["message"] != null)
    {
        <div class="alert alert-dismissible fade show col-lg-9 m-auto" style="background: #60006025; color: #60006060;">
            <div class="d-flex align-items-center message">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cloud-drizzle-fill" viewBox="0 0 16 16">
                    <path d="M4.158 12.025a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm-3.5 1.5a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 1 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm.747-8.498a5.001 5.001 0 0 0-9.499-1.004A3.5 3.5 0 1 0 3.5 11H13a3 3 0 0 0 .405-5.973z" />
                </svg>&nbsp;
                <div>
                    @ViewData["message"]
                </div>
            </div>

            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="p-lg-5"></div>

    <div class="col-lg-9 m-auto s_card">

        <svg class="svg">
            <path fill="#60006015" d="M0,0 L0,150 L100,0 Z"></path>
        </svg>
        <svg class="svg2">
            <path fill="#60006015" d="M850,0 L850,0 L60,650 L850,650 Z"></path>
        </svg>
        <div class="veil row p-0 m-0">
            <div class="col-lg-5 m-0 p-5">
                @using (Html.BeginForm("SignIn", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-tree-fill" viewBox="0 0 16 16">
                            <path d="M8.416.223a.5.5 0 0 0-.832 0l-3 4.5A.5.5 0 0 0 5 5.5h.098L3.076 8.735A.5.5 0 0 0 3.5 9.5h.191l-1.638 3.276a.5.5 0 0 0 .447.724H7V16h2v-2.5h4.5a.5.5 0 0 0 .447-.724L12.31 9.5h.191a.5.5 0 0 0 .424-.765L10.902 5.5H11a.5.5 0 0 0 .416-.777l-3-4.5z" />
                        </svg>&nbsp;&nbsp;
                        <h1 class="h1_signin">Sign In</h1>
                    </div>

                    <div class="form-cover">
                        <label class="label-title">Username</label>
                        <div class="input-cover">
                            <input name="username" type="text" class="input" placeholder="Please enter your username" autocomplete="off" />
                            <label class="label-cover">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-heart" viewBox="0 0 16 16">
                                    <path d="M9 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm-9 8c0 1 1 1 1 1h10s1 0 1-1-1-4-6-4-6 3-6 4Zm13.5-8.09c1.387-1.425 4.855 1.07 0 4.277-4.854-3.207-1.387-5.702 0-4.276Z" />
                                </svg>
                            </label>
                        </div>
                    </div>
                    <div class="p-3"></div>
                    <div class="form-cover">
                        <label class="label-title">Password</label>
                        <div class="input-cover">
                            <input name="password" type="password" class="input" placeholder="Please enter your password" autocomplete="off" />
                            <label class="label-cover">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-alt" viewBox="0 0 16 16">
                                    <path d="M1 13.5a.5.5 0 0 0 .5.5h3.797a.5.5 0 0 0 .439-.26L11 3h3.5a.5.5 0 0 0 0-1h-3.797a.5.5 0 0 0-.439.26L5 13H1.5a.5.5 0 0 0-.5.5zm10 0a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5z" />
                                </svg>
                            </label>
                        </div>
                    </div>
                    <div class="p-5"></div>
                    <div class="d-flex justify-content-between">
                        <button class="signin" type="submit">Sign In</button>

                        <a asp-controller="Home" asp-action="Index">
                            <svg id="backFromSignIn" xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5ZM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5Z" />
                            </svg>
                        </a>
                        
                    </div>
                    
                }
            </div>
            <div class="col-lg-3 m-0 p-0 signin-image d-flex align-items-center justify-content-around">
                <img src="~/images/signin.svg" />
            </div>
            <div class="col-lg-4 icon-container m-0 p-5">
                <div class="icon-text m-0 p-0">
                    <h1>Instagram</h1>
                    <p>
                        Here, we create friends and share our experiences with them. We love
                        talking with our friends and with community. We also create posts
                        to share our experiences of life. The admin service is always available
                        to address our queries.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
