@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram - @ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/images/icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Instagram.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="p-lg-3"></div>
    @if (ViewData["message"] != null)
    {
        <div class="alert alert-dismissible fade show col-lg-10 m-auto" style="background: #E0115F25; color: #E0115F60">
            <div class="d-flex align-items-center message">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cloud-drizzle-fill" viewBox="0 0 16 16">
                    <path d="M4.158 12.025a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm-3.5 1.5a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 1 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm.747-8.498a5.001 5.001 0 0 0-9.499-1.004A3.5 3.5 0 1 0 3.5 11H13a3 3 0 0 0 .405-5.973z" />
                </svg>&nbsp;
                <div>
                    @ViewData["message"]
                </div>
            </div>

            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="p-lg-4"></div>
    <div class="col-lg-10 p-5 h_container m-auto">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/lotus.png" width="150px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 col-lg-9">
                        <li class="nav-item col-lg-2 p-2">
                            <a class="menu" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item col-lg-2 p-2">
                            <a class="menu" asp-controller="Home" asp-action="Team">Team</a>
                        </li>
                        <li class="nav-item col-lg-2 p-2">
                            <a class="menu" asp-controller="Home" asp-action="SignUp">Sign Up</a>
                        </li>
                        <li class="nav-item col-lg-3 p-2">
                            <a class="menu menu-active" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="row m-0 p-0 h_row">
            <div class="col-lg-6 m-0 p-0">
                <div class="us_form">
                    <div class="us_text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-signpost-fill" viewBox="0 0 16 16">
                            <path d="M7.293.707A1 1 0 0 0 7 1.414V4H2a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h5v6h2v-6h3.532a1 1 0 0 0 .768-.36l1.933-2.32a.5.5 0 0 0 0-.64L13.3 4.36a1 1 0 0 0-.768-.36H9V1.414A1 1 0 0 0 7.293.707z" />
                        </svg>&nbsp;&nbsp;
                        <p>Please feel free to contact us. We are always available.</p>
                    </div>
                    @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-cover">
                            <label class="label-title">Email</label>
                            <div class="input-cover">
                                <input name="email" type="email" class="input" placeholder="Please enter your email" autocomplete="off" />
                                <label class="label-cover">
                                    <img src="~/images/butterfly.png" />
                                </label>
                            </div>
                        </div>
                        <div class="p-2"></div>
                        <div class="form-cover">
                            <label class="label-title">Query</label>
                            <div class="input-cover">
                                <textarea name="query" class="input textarea" rows="4">

                                </textarea>
                                <label class="label-cover">
                                    <img src="~/images/butterfly.png" />
                                </label>
                            </div>
                        </div>
                        <div class="p-4"></div>
                        <div class="form-cover">
                            <button class="signup">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16">
                                    <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z" />
                                </svg>&nbsp;Send
                            </button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6 m-0 p-0 h_insta_block d-flex align-items-center justify-content-around">
                <img src="~/images/us.svg" />
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

